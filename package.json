{
  "name": "rssarr",
  "version": "2.1.0",
  "private": "true",
  "description": "Rssarr, bridge between Anime RSS and Sonarr",
  "type": "module",
  "exports": "./server/index.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "homepage": "https://github.com/Izumiko/rssarr",
  "scripts": {
    "start": "bun server/index.ts",
    "dev": "run-p dev:server dev:web",
    "dev:server": "bun --watch server/index.ts",
    "dev:web": "vite",
    "build": "run-p build:web build:server",
    "build:web": "tsc -b && vite build --outDir dist/public",
    "build:server": "bun build server/index.ts --target=node --minify --outfile=dist/index.mjs --define \"__dirname=.\" && cp node_modules/errorhandler/public/* dist/public/",
    "preview": "vite preview",
    "lint": "eslint src"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/jwt": "^1.1.1",
    "@elysiajs/static": "^1.1.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^6.5.0",
    "axios": "^1.11.0",
    "dotenv-cli": "^10.0.0",
    "elysia": "^1.1.25",
    "json-server": "^1.0.0-beta.3",
    "lowdb": "^7.0.1",
    "parse-torrent": "^11.0.18",
    "qs": "^6.14.0",
    "ra-data-json-server": "^5.10.1",
    "react": "^19.1.1",
    "react-admin": "^5.10.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "swr": "^2.3.4",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/bun": "^1.1.13",
    "@types/node": "^22.9.1",
    "@types/parse-torrent": "^5.8.7",
    "@types/qs": "^6.9.17",
    "@types/react-dom": "^18.3.1",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^15.12.0",
    "npm-run-all2": "^7.0.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0",
    "vite": "^7.1.1"
  }
}
